/dts-v1/;
#include "sigma-union1.dtsi"

/ {
	model = "Sigma TRIX-UNION1 board";
	compatible = "sdesigns,union1", "sdesigns,trix";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
	};

	/* We expect the bootloader to fill in the chosen node and memory node */
	chosen {
		stdout-path = "serial0:115200n8";
		bootargs = "earlycon=uart8250,0xfb005100,115200n8 console=ttyS0,115200n8 mem=128m loglevel=8 /dev/ram0 rw";
	};

	memory {
		device_type = "memory";
		reg = <0x00000000 0x00000000 0x00000000 0x08000000>;
	};

};
